/* pages/views/community/index.wxss */
@import "/app.wxss";

.scroll-content{
    height: 100vh;
    width: 100%;
}
.nav-bar {
    width: 100%;
    position: fixed;
    top: 10;
    left: 0;
    z-index: 100;
}
.nav-item{
    position: absolute;
    bottom: 0;
}
.body {
    width: 100%;
    position: relative;
    z-index: 1;
    overflow: hidden;
    border-radius: 5px;
}


.list-container {
    width: 100%;
    height: 83vh;
    overflow: scroll;
    background: rgb(230, 230, 236);
}

.body > .btn {
    width: 60px;
    height: 20px;
    position: absolute;
    top: -25px;
    left: 43%;
}






.push-btn {
    width: 40px;
    height: 40px;
    position: fixed;
    bottom: 5%;
    z-index: 20;
    right: 10px;
    font-size: 40px;
    color: #1cbbb4 ;
}

.push-btn:active {
    color: #9fa896;
}




.custom-pull-down, .custom-loader {
    width: 100%;
    font-size: 28 rpx;
    color: #fcffec;
    text-align: center;
    line-height: 60px;
    background-color: #eeeeee;
}
